<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#AB2196F3"
    tools:context=".activities.GestionPilotoActivity">

    <TextView
        android:id="@+id/txt_titulo_Ges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/gestionar_farmacos"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_nuevo_farmaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tamMargen"
        android:onClick="nuevo"
        android:text="@string/nuevo_farmaco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_Ges"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/bt_farmaco_actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tamMargen"
        android:onClick="actualizar"
        android:text="actualizar farmaco"
        app:layout_constraintEnd_toEndOf="@+id/bt_nuevo_farmaco"
        app:layout_constraintStart_toStartOf="@+id/bt_nuevo_farmaco"
        app:layout_constraintTop_toBottomOf="@+id/bt_nuevo_farmaco"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/bt_mostrar_farmaco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:onClick="mostrar"
        android:text="mostrar farmaco"
        app:layout_constraintEnd_toEndOf="@+id/bt_farmaco_actualizar"
        app:layout_constraintStart_toStartOf="@+id/bt_farmaco_actualizar"
        app:layout_constraintTop_toBottomOf="@+id/bt_farmaco_actualizar" />
</androidx.constraintlayout.widget.ConstraintLayout>