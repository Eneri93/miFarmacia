<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF9800"
    app:cardBackgroundColor="#0000BCD4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img_rv_farm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="foto estudiante"
            app:srcCompat="@drawable/droga" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_rv_farmaco_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_rv_farmaco_principio"
                android:layout_width="272dp"
                android:layout_height="29dp"
                android:text="@string/principioA" />

            <TextView
                android:id="@+id/txt_rv_farmaco_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marca" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>